<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/screen_bg"

    >

    <!-- Space Heading -->
    <TextView
        android:layout_width="411dp"
        android:layout_height="54dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:textSize="30sp"
        android:textStyle="bold" />

    <!-- "Create Account" Heading -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:text="@string/create_account"
        android:textSize="35sp"
        android:textColor="@color/text_large"
        android:textStyle="bold" />

    <!-- "Letâ€™s create an account together!" Heading -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/let_s_create_an_account_together"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/text_small"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp"/>

    <!-- Name EditText -->
    <EditText
        android:id="@+id/editTextName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/name"
        android:inputType="text" />

    <!-- Email EditText -->
    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/email_sinup"
        android:inputType="textEmailAddress" />

    <!-- Password EditText -->
    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/password_signup"
        android:inputType="textPassword" />

    <TextView
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:textSize="30sp"
        android:textStyle="bold" />

    <!-- Sign In Button -->
    <Button
        android:id="@+id/buttonSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sign_up"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:backgroundTint="@color/button_bg"
        />

    <TextView
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:text="@string/or_signup"
        android:textColor="@color/text_small"
        android:textSize="20sp" />

    <TextView
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:text="@string/sign_up_with"
        android:textColor="@color/text_small"
        android:textSize="20sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/Emp_1"
            android:layout_width="39dp"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:background="@android:color/transparent" />

        <ImageButton
            android:id="@+id/Emp_2"
            android:layout_width="39dp"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:background="@android:color/transparent" />

        <!-- Google Sign In Button -->
        <ImageButton
            android:id="@+id/buttonSignUpGoogle"
            android:layout_width="39dp"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/google_icon" />

        <!-- Facebook Sign In Button -->
        <ImageButton
            android:id="@+id/buttonSignUpFacebook"
            android:layout_width="39dp"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/facebook_icon" />

        <!-- Apple Sign In Button -->
        <ImageButton
            android:id="@+id/buttonSignUpApple"
            android:layout_width="39dp"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/apple_icon" />

        <ImageButton
            android:id="@+id/Emp_3"
            android:layout_width="39dp"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:background="@android:color/transparent" />

        <ImageButton
            android:id="@+id/Emp_4"
            android:layout_width="39dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewSignUp"
            android:layout_width="251dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="16dp"
            android:text="@string/already_have_an_account"
            android:textColor="@android:color/darker_gray"
            android:textSize="16sp" />


        <Button
            android:id="@+id/buttonSignUp1"
            android:layout_width="104dp"
            android:layout_height="36dp"
            android:text="@string/sign_in"
            android:textSize="12sp"
            android:textColor="@color/text_small"
            android:textStyle="bold"
            android:backgroundTint="@color/screen_bg"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="663dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:srcCompat="@drawable/cinnamon" />


</LinearLayout>
