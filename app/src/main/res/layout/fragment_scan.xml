    <Button
        android:id="@+id/btn_camera"
        android:layout_width="304dp"
        android:layout_height="62dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/round_btn"
        android:backgroundTint="@color/app_primary"
        android:contextClickable="false"
        android:text="කැමරාවෙන්"
        app:icon="@drawable/camera_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewUpload"
        app:layout_constraintVertical_bias="0.365"
        tools:src="@drawable/camera_icon" />

    <Button
        android:id="@+id/btn_upload"
        android:layout_width="304dp"
        android:layout_height="62dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/round_btn"
        android:backgroundTint="@color/app_primary"
        android:text="කෙලින්ම දුරකථන ගබඩාවෙන්"
        app:icon="@drawable/upload_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_camera"
        app:layout_constraintVertical_bias="0.025"
        tools:src="@drawable/upload_icon" />

    <ImageView
        android:id="@+id/imageViewUpload"
        android:layout_width="263dp"
        android:layout_height="276dp"
        android:layout_marginBottom="56dp"
        android:src="@drawable/file"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.146" />

    <TextView
        android:id="@+id/textResult"
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:fontFamily="casual"
        android:text="කරුණාකර විකල්පයක් තෝරන්න"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btn_camera"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewUpload"
        app:layout_constraintVertical_bias="0.663" />

</androidx.constraintlayout.widget.ConstraintLayout>
